apiVersion: v1
kind: Secret
metadata:
  name: democratic-csi-secret
  namespace: default
type: Opaque
stringData:
  driver-config-file.yaml: |-
    driver: freenas-iscsi
    httpConnection:
      apiVersion: 2
      protocol: https
      host: {{ nas_host }}
      port: 443
      apiKey: {{ nas_apikey | trim }}
      allowInsecure: true
    instance_id: null
    iscsi:
      targetPortal: "{{ nas_host }}:3260"
      targetPortals: []
      namePrefix: csi-
      nameSuffix: -cluster
      targetGroups:
      - targetGroupAuthGroup: null
        targetGroupPortalGroup: 1
        targetGroupInitiatorGroup: 1
        targetGroupAuthType: None
      extentInsecureTpc: true
      extentXenCompat: false
      extentDisablePhysicalBlocksize: true
      extentBlocksize: 4096
      extentRpm: "SSD"
      extentAvailThreshold: 0
      interface: null
    sshConnection:
      host: {{ nas_host }}
      port: 22
      username: {{ nas_user }}
      privateKey: |
        {{ private_key_content | indent(8) }}
    zfs:
      cli:
        sudoEnabled: true
      datasetParentName: ssd1/csi/vols
      detachedSnapshotsDatasetParentName: ssd1/csi/snaps
      zvolBlocksize: null
      zvolCompression: ""
      zvolDedup: ""
      zvolEnableReservation: true
      datasetEnableQuotas: true