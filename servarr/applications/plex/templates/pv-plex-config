apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv-plex-config
spec:
  capacity:
    storage: 100Gi
  accessModes:
    - ReadWriteMany
  volumeMode: Block
  persistentVolumeReclaimPolicy: Retain
  storageClassName: truenas-iscsi-nonroot
  csi:
    driver: org.democratic-csi.iscsi
    fsType: ext4